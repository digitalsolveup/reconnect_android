<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/radius_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/radius_2km"
                    style="@style/RegularFontKr.16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/map_chip_item_color"
                    android:text="반경 2km" />

                <com.google.android.material.chip.Chip
                    style="@style/RegularFontKr.16"
                    android:id="@+id/radius_3km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반경 3km" />

                <com.google.android.material.chip.Chip
                    style="@style/RegularFontKr.16"
                    android:id="@+id/radius_4km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반경 4km" />

                <com.google.android.material.chip.Chip
                    style="@style/RegularFontKr.16"
                    android:id="@+id/radius_5km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="반경 5km" />
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <include
            android:id="@+id/include_home_bottom"
            layout="@layout/fragment_home_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>